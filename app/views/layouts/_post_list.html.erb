<div class="">
  <div class="row mb-2">

    <% @posts.each do |post| %>

      <div class="col-md-6 ">
        <div class="no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
          <div class="p-4 d-flex flex-column position-static">
            <strong class="d-inline-block mb-2 text-primary"><%= post.category.name %></strong>
            <h3 class="mb-0"><%= link_to post.title, post,{:style=>'color:#000000;'} %></h3>
            <div class="row">
              <div class="col-4 text-muted">Author:  <%= post.author %></div>
              <div class="col-4 text-muted">Comments: <%= post.comments.count %></div>
              <div class="col-4 text-muted"><%= post.created_at.strftime("%d-%m-%Y") %></div>
            </div>
            <p style="margin-top:10px" class="card-text mb-auto"><%= post.text %></p>

          </div>
        </div>
      </div>

      <% end %>

  </div>

</div>
